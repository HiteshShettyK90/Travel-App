<!--partials/checkout/payment_form.handlebars begin-->
<div class="container">
  <div class="row">
    <h1>Payment</h1>
    <div class="container">
      <form id="checkout-form" method="POST" action="/confirmation">
        <input type="hidden" name="booking_id" value="{{bookingDetails.booking_id}}" />
        <div class="row">
          <div class="form-group col-md-6">
            <label for="name">Name on Card</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="NAME ON CARD">
          </div>
          <div class="form-group col-md-6">
            <label for="cardnumber">Card Number</label>
            <input type="text" class="form-control" id="cardnumber" name="cardnumber" placeholder="CARD NUMBER">
          </div>
          <div class="form-group col-md-6">
            <label for="expirymonth">Expiry Month</label>
            <input type="text" class="form-control" id="expirymonth" name="expirymonth" placeholder="EXPIRY MONTH (MM)">
          </div>
          <div class="form-group col-md-6">
            <label for="expiryyear">Expiry Year</label>
            <input type="text" class="form-control" id="expiryyear" name="expiryyear" placeholder="EXPIRY YEAR (YYYY)">
          </div>
          <div class="form-group col-md-6">
            <label for="cvv">CVV</label>
            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="CVV">
          </div>
        </div>
        <div class="row">
          <button type="submit" class="btn btn-primary">Make Payment</button>
        </div>
      </form>
    </div>
  </div>
</div>
